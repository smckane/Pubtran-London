<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingTop="8dp"
	android:paddingBottom="2dp" android:paddingLeft="10dp"
	android:paddingRight="10dp">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingBottom="6dp">

		<TextView android:id="@+id/tvLeavesIn" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#808080"
			android:textSize="14dp" android:text="za 7 min" />

		<TextView android:id="@+id/tvDuration" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="right"
			android:textColor="#808080" android:textSize="14dp" android:text="celkem 24 min" />

	</LinearLayout>

	<LinearLayout android:id="@+id/llJourneyParts"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<TextView android:id="@+id/tvConnInfo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:textColor="#303080" android:paddingBottom="8dp"
		android:paddingTop="4dp" android:textSize="15dp" android:text="18 KÄ"
		android:visibility="gone" />

</LinearLayout>